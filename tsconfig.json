{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "target": "ES6",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "jsxImportSource": "react",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "components/solar-system/.backup/AsteroidObject.tsx",
    "components/solar-system/.backup/CameraControls.tsx",
    "components/solar-system/.backup/ControlPanel.tsx",
    "components/solar-system/.backup/FilterPanel.tsx",
    "components/solar-system/.backup/InfoPanel.tsx",
    "components/solar-system/.backup/LightingSetup.tsx",
    "components/solar-system/.backup/OrbitPath.tsx",
    "components/solar-system/.backup/SceneContainer.tsx",
    "components/solar-system/.backup/SearchBar.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
